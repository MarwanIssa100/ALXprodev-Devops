#!/bin/bash

JSON_FILE="data.json"

# Extract fields using jq
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter
formatted_height=$(jq -r '.height' "$JSON_FILE" | awk '{printf "%.1f", $1/10}')  # decimeters → meters
formatted_weight=$(jq -r '.weight' "$JSON_FILE" | awk '{printf "%.0f", $1/10}')  # hectograms → kg
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')  # capitalize

# Format output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
